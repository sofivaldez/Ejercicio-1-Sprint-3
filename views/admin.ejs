<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ejericio 21</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <div class="d-flex justify-content-between mt-5 mb-2 align-items-center">
        <h1 class="d-inline">Listado de Articulos</h1>
        <a class="btn btn-success d-inline" href="admin/create">Nuevo</a>
      </div>
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Titulo</th>
            <th scope="col">Autor</th>
            <th scope="col">Fecha de creaci√≥n</th>
            <th scope="col" width="175">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for (const article of articles) { %>
          <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.user.firstname%></td>
            <td><%= format(article.createdAt, 'dd/MM/yyyy kk:mm:ss') %></td>
            <td>
              <a href="admin/edit/<%= article.id %> " class="btn btn-primary">Editar</a>
              <a href="admin/delete/<%= article.id %> " class="btn btn-danger">Eliminar</a>
            </td>
          </tr>
          <%} %>
        </tbody>
      </table>
    </div>
  </body>
</html>
